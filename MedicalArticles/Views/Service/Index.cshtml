@model ServiceViewModel

<!-- Start Breadcrumb
   ============================================= -->
<div class="breadcrumb-area shadow dark bg-fixed text-light" style="background-image: url(assets/img/banner/2.jpg);">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h1>Our Services</h1>
            </div>
            <div class="col-md-6 text-right">
                <ul class="breadcrumb">
                    <li><a href="#"><i class="fas fa-home"></i> Home</a></li>
                    <li><a href="#">Pages</a></li>
                    <li class="active">Services</li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- End Breadcrumb -->
<!-- Start Services
============================================= -->
<div class="top-services-area default-padding-bottom default-padding-top">
    <div class="services-area inc-icon carousel-shadow default-padding-bottom">
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    <div class="site-heading text-center">
                        <h2><span>@_localization.GetKey("Service").Value</span></h2>
                        <p>
                            Sizin üçün xüsusi olaraq hazırladığımız ən yüksək standartlara uyğun şəkildə təqdim etdiyimiz peşəkar xidmətlər
                        </p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="services-items text-center services-carousel owl-carousel owl-theme"
                    <!-- Single Item -->
                        @foreach (var item in Model.Services)
                        {
                                 <div class="item">
                            <div class="info" ;">
                                <h4>
                                    <a href="#">@item.Title</a>
                                </h4>
                                <div style="border-radius: 100%; width:100px; height:100px; overflow:hidden; margin-left:auto; margin-right:auto">
                                       <img src="@item.PhotoUrl" width="100px" />
                                 </div>
                                <p>
                                        @item.Description
                                </p>
                                <a class="btn btn-theme border circle btn-md" href="#">@_localization.GetKey("ReadMore").Value</a>
                            </div>
                        </div>
                        }

                    <!-- End Single Item -->

                </div>
                </div>
            </div>
        </div>
    </div>
<!-- End Services -->
<!-- Start Why Chose Us
============================================= -->
<div class="chose-us-area default-padding item-half">
    <div class="container">
        <div class="row">
            @foreach (var whyUs in Model.WhyUs)
                {
                   <div class="col-md-6 info">
                <div class="heading">
                    <h2>@_localization.GetKey("WhyUs").Value</h2>
                    <p>
                        @whyUs.Header
                    </p>
                </div>
                <ul>
                    @foreach (var item in Model.WhyUsItems)
                            {
                                <li>
                                    <div class="info">
                                        <h4>@item.Title</h4>
                                        <p>
                                            @item.Description
                                        </p>
                                    </div>
                                </li>
                            }
                </ul>
            </div> 
                }
           
            <!-- Start Faq -->
            <div class="col-md-6 faq-area">
                <div class="heading">
                    <h2>@_localization.GetKey("Faq").Value</h2>
                </div>
                <div class="acd-items acd-arrow">
                    <div class="panel-group symb" id="accordion">

                        @foreach (var item in Model.Faqs)
                            {
                                <!-- Single Item -->
                                <div class="panel panel-default">
                                    <div class="panel-heading">
                                        <h4 class="panel-title">
                                            <a data-toggle="collapse" data-parent="#accordion" href="#ac1">
                                                @item.Question
                                            </a>
                                        </h4>
                                    </div>
                                    <div id="ac1" class="panel-collapse collapse in">
                                        <div class="panel-body">
                                            <p>
                                                @item.Answer
                                            </p>
                                           
                                        </div>
                                    </div>
                                </div>
                                <!-- End Single Item -->
                            }

                    </div>
                </div>
            </div>
            <!-- End Faq -->
        </div>
    </div>
</div>
<!-- End Why Chose Us -->
