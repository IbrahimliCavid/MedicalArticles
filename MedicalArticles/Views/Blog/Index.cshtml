============================================= -->
<div class="blog-area full-blog left-sidebar default-padding">
    <div class="container">
        <div class="row">
            <div class="blog-items">
                <div class="blog-content col-md-8">
                    @foreach (var item in Model)
                    {
                        <!-- Single Item -->
                        <div class="single-item item">
                            <div class="thumb" style="width: 830px; height:500px; overflow:hidden;">
                                <a href="blog-single-right-sidebar.html">
                                    <img src="@item.PhotoUrl" alt="Thumb">
                                </a>
                            </div>
                            <div class="info">
                                <div class="meta" asp-action = "Details">
                                    <ul>
                                        <li><a href="#">@item.Name @item.Surname</a></li>
                                        <li>@item.CreatedDate.ToString("dd.MM.yyyy")</li>
                                    </ul>
                                </div>
                                <h3>
                                    <a href="blog-single-right-sidebar.html">@item.Title</a>
                                </h3>
                                <p>
                                    @(item.Text.Length > 200 ? @item.Text.Substring(0, 200) + "..." : @item.Text)
                                </p>
                                <a asp-route-id = "@item.Id" asp-action = "Details" class="btn btn-theme circle border btn-sm" >@_localization.GetKey("ReadMore").Value <i class="fas fa-angle-right"></i></a>
                            </div>
                        </div>
                        <!-- End Single Item -->
                    }
                 
                  
                    <!-- Pagination -->
                    <div class="row">
                        <div class="col-md-12 pagi-area">
                            <nav aria-label="navigation">
