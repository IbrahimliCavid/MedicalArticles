@using Entities.Dtos
@model List<BlogDto>

<!-- Start Breadcrumb
   ============================================= -->
<div class="breadcrumb-area shadow dark bg-fixed text-light" style="background-image: url(assets/img/banner/8.jpg);">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h1>Blog Left Sidebar</h1>
            </div>
        </div>
    </div>
</div>
<!-- End Breadcrumb -->
