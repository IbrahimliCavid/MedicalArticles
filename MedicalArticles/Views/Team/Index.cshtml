@using Entities.Dtos
@model List<TeamBoardDto> 

<!-- Start Breadcrumb
  ============================================= -->
<div class="breadcrumb-area shadow dark bg-fixed text-light" style="background-image: url(assets/img/banner/7.jpg);">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h1>@_localization.GetKey("Team").Value</h1>
            </div>
        </div>
    </div>
</div>
<!-- End Breadcrumb -->
<!-- Start Doctors
============================================= -->
<div class="doctor-area bg-gray default-padding bottom-less">
    <div class="container">
        <div class="row">
            <div class="doctor-items text-center">
                @foreach (var item in Model)
                {
                    <!-- Single Item -->
                    <div class="col-md-4 col-sm-6 equal-height">
                        <div class="item">
                            <div class="thumb">
                                <img src="@item.PhotoUrl" alt="Thumb">
                                
                                <div class="social">
                                    <ul>
                                        <li class="facebook">
                                            <a href="@item.FacebookUrl"><i class="fab fa-facebook-f"></i></a>
                                        </li>
                                        <li class="instagram">
                                            <a href="@item.InstagramUrl"><i class="fab fa-instagram"></i></a>
                                        </li>
                                        <li class="linkedin">
                                            <a href="@item.LinkedinUrl"><i class="fab fa-linkedin-in"></i></a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <div class="info">
                                <h4>@item.Name @item.Surname</h4>
                                <h5>@item.Profession</h5>
                            </div>
                        </div>
                    </div>
                    <!-- End Single Item -->
                }
            </div>
        </div>
    </div>
</div>
<!-- End Doctors -->
