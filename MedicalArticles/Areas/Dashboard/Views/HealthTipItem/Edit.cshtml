﻿
@model HealthTipItemUpdateDto;

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="HealthTipId" class="control-label">Kateqoriya</label>
                <select asp-for="HealthTipId" class="form-control">
                    @foreach (var item in ViewData["HealthTip"] as IEnumerable<HealthTipDto>)
                    {
                        <option value="@item.Id">@item.Title</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label asp-for="Text" class="control-label">Kontent</label>
                <input asp-for="Text" class="form-control" id="answer" />
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="CreatedDate" class="form-control" type="hidden" />
            </div>

            <div class="form-group">
                <input type="submit" value="Təsdiq et" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Geri</a>
</div>