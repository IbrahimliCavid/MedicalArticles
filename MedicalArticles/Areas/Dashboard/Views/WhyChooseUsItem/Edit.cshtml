@model WhyChooseUsItemUpdateDto;

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="WhyChooseUsId" class="control-label">Servis</label>
                <select asp-for="WhyChooseUsId" class="form-control">
                    @foreach (var item in ViewData["WhyUs"] as IEnumerable<WhyChooseUsDto>)
                    {
                        <option value="@item.Id">@item.Header</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label asp-for="Title" class="control-label">Başlıq</label>
                <input asp-for="Title" class="form-control" id="answer" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Description" class="control-label">Açıqlama</label>
                <input asp-for="Description" class="form-control" id="answer" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="CreatedDate" class="form-control" type="hidden" />
            </div>

            <div class="form-group">
                <input type="submit" value="Təsdiq et" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
